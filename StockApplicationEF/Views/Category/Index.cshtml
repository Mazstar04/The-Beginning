@model IEnumerable<StockAppEF.Models.ViewModels.CategoryViewModel>

@{ ViewBag.Title = "Category Listing"; }

<h1>Category List</h1>

<div class="card">
    <div class="card-header">
        <a class="btn btn-success" asp-controller="Category" asp-action="Create">Add Category</a>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Created At</th>
                    <th>Detail</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td> @category.Id </td>
                        <td> @category.Name </td>
                        <td> @category.CreatedAt </td>
                        <td> <a asp-action="Detail" asp-route-id="@category.Id">Detail</a></td>
                        <td> <a asp-action="Update" asp-route-id="@category.Id">Update</a></td>
                        <td> <a asp-action="Delete" asp-route-id="@category.Id">Delete</a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>