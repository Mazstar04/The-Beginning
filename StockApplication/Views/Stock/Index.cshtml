@model List<Stock>
@{
    ViewData["Title"] = "Stock";
}

<div class="card">
    <div class="card-header">
        <a asp-controller="Stock" asp-action="Create">Add Stock</a>
    </div>
</div>
<table class="table  table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Brand</th>
            <th>Name</th>
            <th>Details </th>
            <th>Update Stock</th>
            <th> Delete Stock</th>

        </tr>
    </thead>

    <tbody>
        @foreach (Stock stock in Model)
        {
        <tr>
            <td>@stock.Id</td>
            <td>@stock.Brand</td>
            <td>@stock.Name</td>
            <td> <a asp-action="Find" asp-route-id="@stock.Id">Details </a></td>
            <td> <a asp-action="Update" asp-route-id="@stock.Id">Update </a></td>
            <td><a asp-action="Delete" asp-route-id="@stock.Id">Delete </a> </td>
            @**@
        </tr>
        }

    </tbody>
</table>
